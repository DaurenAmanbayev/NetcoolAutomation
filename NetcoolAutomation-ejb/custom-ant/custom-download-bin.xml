<?xml version="1.0" encoding="UTF-8"?>
<project name="downloadlibs" default="all" basedir=".">
    <target name="checkLibs">    
        <available file="${basedir}/libs2" property="automation.libs.present"/>       
    </target> 
    
    <target name="download_libs" depends="checkLibs" unless="automation.libs.present">
        <property name="automation.libs">${basedir}/libs</property>
        <echo message="Starting Custom Script ${basedir}"/>
        <echo message="Downloading Libs Because they are not present.."/>
        <mkdir dir="${automation.libs}"/>
        <get src="http://www.nishisan.com.br/java/commons-configuration-1.9.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-dbcp2-2.0.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-io-2.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-lang3-3.0.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-logging-1.1.3.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-net-3.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/commons-pool2-2.2.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/groovy-all-2.3.6.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/gson-2.3.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/guava-18.0.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/jconn3-6.0.5.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/jtds-1.3.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/log4j-1.2.16.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/quartz-2.2.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/quartz-jobs-2.2.1.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/slf4j-api-1.6.6.jar" dest="${automation.libs}/"/>
        <get src="http://www.nishisan.com.br/java/slf4j-log4j12-1.6.6.jar" dest="${automation.libs}/"/>
       
        
    </target>
</project>
